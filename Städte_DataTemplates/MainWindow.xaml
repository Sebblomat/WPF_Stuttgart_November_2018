<Window x:Class="Städte_DataTemplates.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Städte_DataTemplates"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <TextBlock Margin="0 0 10 0">UserName: </TextBlock>
            <TextBox Width="100" Name="tbUserName"></TextBox>
        </StackPanel>
        <Button HorizontalAlignment="Center" Click="Button_Click">Lade Städte</Button>
    </StackPanel> 
</Window>
